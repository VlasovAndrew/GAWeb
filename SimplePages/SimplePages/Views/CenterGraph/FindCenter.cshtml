@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "FindCenter";
}

    <div class="row justify-content-center mt-4">
        <div class="col-4 bg-white p-3">
            @using (Html.BeginForm("FindCentralVertex", "CenterGraph"
                    , FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <h3 class="text-center"> Поиск центра графа </h3>
                <div class="form-group">
                    <label for="">  Файл с графом  </label>
                    <span> <a class="infolink"> </a> </span>
                    <input type="file" data-tooltip="Привет" name="upload" accept=".txt" class="form-control">
                </div>
                <div> <button type="submit" data-tooltip="Привет" class="btn btn-primary"> Отправить </button> </div>
            }
        </div>
    </div>


