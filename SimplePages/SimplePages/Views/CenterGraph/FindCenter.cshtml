            {
                <h2 class="text-center"> Поиск центра графа </h2>
                <div class="form-group">
                    <label for="">  Загрузите файл  </label>
                    <input type="file" name="upload" accept=".txt" class="form-control">
                </div>
                <div> <button type="submit" class="btn btn-primary"> Отправить </button> </div>
            }
        </div>
    </div>


