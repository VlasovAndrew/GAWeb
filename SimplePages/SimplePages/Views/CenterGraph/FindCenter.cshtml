    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "FindCenter";
}

    <div class="row justify-content-center mt-4">
        <div class="col-lg-3 col-md-5 bg-white p-3">
            @using (Html.BeginForm("FindCentralVertex", "CenterGraph"
